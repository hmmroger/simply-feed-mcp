{
  "name": "simply-feed-mcp",
  "displayName": "Simply Feed MCP Server",
  "description": "A Model Context Protocol (MCP) server for managing and querying RSS/news feeds. This server enables AI assistants to fetch, search, and retrieve information from RSS feeds in real-time.",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "rss",
    "news-feeds",
    "feed-reader",
    "ai-assistant",
    "news-aggregator"
  ],
  "license": "MIT",
  "author": "hmmroger",
  "homepage": "https://github.com/hmmroger/simply-feed-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/hmmroger/simply-feed-mcp.git"
  },
  "version": "0.0.5",
  "main": "./dist/simply-feed-mcp.js",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.map"
  ],
  "type": "module",
  "bin": {
    "simply-feed-mcp": "./dist/index.js"
  },
  "scripts": {
    "prebuild": "node generate-version.mjs",
    "build": "npm run check-types && npm run lint && npm run build:tsc",
    "build:tsc": "tsc --project tsconfig.json",
    "watch": "npm-run-all -p watch:*",
    "watch:tsc": "tsc --watch --project tsconfig.json",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "server": "node ./dist/index.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.27",
    "@types/yargs": "^17.0.35",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.2",
    "@azure/storage-blob": "^12.29.1",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "es-toolkit": "^1.43.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "fast-xml-parser": "^5.3.3",
    "mdast-util-from-markdown": "^2.0.2",
    "node-html-markdown": "^1.3.0",
    "openai": "^5.23.2",
    "unist-util-visit": "^5.0.0",
    "uuid": "^11.1.0",
    "yargs": "^18.0.0",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=20.19.0"
  }
}
